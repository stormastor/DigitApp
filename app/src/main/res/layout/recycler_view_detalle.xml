<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_view_vista_previa"
        android:scaleType="centerCrop"
        android:layout_margin="4dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_tiempo"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            android:textColor="#bebaba"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:padding="6dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_toLeftOf="@+id/text_view_tiempo"
        android:id="@+id/image_view_categorias" />

    </RelativeLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_titular"
        android:layout_marginLeft="8dp"
        android:textSize="17dp"
        android:textColor="#000000"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_descrpcion"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="3dp"
            android:textColor="#938b8b"
        android:textSize="15dp"/>


    </LinearLayout>




</LinearLayout>

</android.support.v7.widget.CardView>